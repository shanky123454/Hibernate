package in.com.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.User;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.core.userdetails.UserDetailsService;
import org.springframework.security.core.userdetails.UsernameNotFoundException;

import in.com.dao.ITouristRepo;
import in.com.model.Tourist;

public class Usersssss implements UserDetailsService {

	@Autowired
	public class UserConfigurationIdea;
	
	
	@Autowired
	public ITouristRepo iTouristRepo;
	
	@Override
	public UserDetails loadUserByUsername(String username) throws UsernameNotFoundException {
	Tourist tourist =	iTouristRepo.findByName(username);
		return new User(tourist.getUsername(), tourist.getPassword(), true, true, true, true, null)
	}

}
